{{> menu_member id="update_member"}}


<form class="ui stacked segment form" action="/memberDataUpdate" method="POST">
  <h3 class="ui header">Existing Details</h3>
  <div class="three fields">
    <div class="field">
      <label>First Name</label>
      <input placeholder={{membersData.firstName}} type="text"  name="firstname">
    </div>
    <div class="field">
      <label>Last Name</label>
      <input placeholder={{membersData.lastName}}  type="text"  name="lastname">
    </div>
     <div class="field">
      <label>Gender</label>
      <input placeholder={{membersData.gender}} type="text"  name="gender">
    </div>
  </div>
  <div class="three fields">
    <div class="field">
      <label>Height</label>
      <input placeholder={{membersData.height}} type="text"  name="height">
    </div>
    <div class="field">
      <label>Starting Weight</label>
      <input placeholder={{membersData.startWeight}} type="number"  name="startweight">
    </div>
    <div class="field">
      <label>Age</label>
      <input placeholder={{membersData.age}} type="number"  name="age">
    </div>
  </div>
    <div class="field">
        <label>Source Image file:</label>
        </div>
        <div class="ui fields">
          <input placeholder={{membersData.photo}} type="text"  name="photo">
        </div>
  
  
  <button class="ui blue submit button">Update</button>
</form>