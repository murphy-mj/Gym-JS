<table class="ui table">
  <thead>
{{>assessment-header}}
  </thead>
  <tbody>
    {{#each assessments}}
      <tr>
        <td>
          {{date}}
        </td>
        <td>
          {{weight}}
        </td>
         <td>
           {{chest}}
        </td>
        <td>
          {{thigh}}
        </td>
        <td>
          {{upperarm}}
        </td>
        <td>
          {{waist}}
        </td>
         <td>
           {{hips}}
        </td>
        <td>
           {{#if trend}}
         <div class="ui green horizontal label">Improvement</div>
          {{else}}
           <div class="ui red horizontal label">Reverting</div>
          {{/if}}
        </td>
         <td>
           {{comment}}
        </td>
        <td>
        <a href = "/member/{{../membersData.id}}/deleteassessment/{{id}}" class ="ui icon button"><i class="icon trash"></i></a>
        </td>
        <td>
        <a href = "/member/{{../membersData.id}}/assessment/{{id}}" class ="ui icon button"><i class="icon compress"></i></a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>