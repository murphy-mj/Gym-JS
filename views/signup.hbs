{{> menu_initial id="register"}}

<form class="ui stacked segment form" action="/register" method="POST">
  <h3 class="ui header">Register</h3>
  <div class="two fields">
    <div class="field">
      <label>First Name</label>
      <input placeholder="First Name" type="text"  name="firstName">
    </div>
    <div class="field">
      <label>Last Name</label>
      <input placeholder="Last Name" type="text"  name="lastName">
    </div>
     <div class="field">
      <label>Gender</label>
      <input placeholder="M/F/X" type="text"  name="gender">
    </div>
  </div>
  <div class="field">
    <label>Email</label>
    <input placeholder="Email" type="text" name="email">
  </div>
  <div class="field">
    <label>Password</label>
    <input type="password" name="password">
  </div>
  <div class="three fields">
    <div class="field">
      <label>Height</label>
      <input placeholder="2.45 meters" type="number"  name="height">
    </div>
    <div class="field">
      <label>Starting Weight</label>
      <input placeholder="00.00 Kg" type="number"  name="startweight">
    </div>
    <div class="field">
      <label>Age</label>
      <input placeholder="21" type="text"  name="age">
    </div>
  </div>
  <div class="field">
      <label>Address</label>
      <input placeholder="331 Bakers St" type="text"  name="address">
  </div>
  <div class="two fields">
    <div class="field">
      <label>Starting Arm</label>
      <input placeholder="2.45 meters" type="number"  name="startarm">
    </div>
    <div class="field">
      <label>Starting Thigh</label>
      <input placeholder="15 cm" type="number"  name="startthigh">
    </div>
  </div>
  <button class="ui blue submit button">Submit</button>
</form>